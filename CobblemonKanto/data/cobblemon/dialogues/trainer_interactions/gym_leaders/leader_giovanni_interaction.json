{
    "speakers": {
        "npc": {
            "name": {
                "type": "expression",
                "expression": "q.npc.name"
            },
            "face": "q.npc.face();"
        },
        "player": {
            "face": "q.player.face();",
            "name": {
                "type": "expression",
                "expression": "q.player.username"
            }
        }
    },
    "pages": [
        {
            "id": "greeting",
            "speaker": "npc",
            "lines": [
                "Fwahahaha! Welcome to my hideout!"
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "Next",
                        "value": "next",
                        "action": "q.dialogue.set_page('page2');"
                    }
                ]
            }
        },
        {
            "id": "page2",
            "speaker": "npc",
            "lines": [
                "It shall be so until I can restore Team Rocket to its former glory."
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "Next",
                        "value": "next",
                        "action": "q.dialogue.set_page('battle_prompt');"
                    }
                ]
            }
        },
        {
            "id": "battle_prompt",
            "speaker": "npc",
            "lines": [
                "But, you have found me again. So be it. This time, I'm not holding back!"
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "§c⚔ Battle ⚔§r",
                        "value": "battle",
                        "action": "q.dialogue.set_page('battle_start');"
                    },
                    {
                        "text": "No",
                        "value": "no",
                        "action": "q.dialogue.close();"
                    }
                ]
            }
        },
        {
            "id": "battle_start",
            "speaker": "npc",
            "lines": [
                "Once more, you shall face Giovanni, the greatest Trainer!"
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "Close",
                        "value": "close",
                        "action": [              
                            "q.run_command('scoreboard players set ' + q.player.username + ' BattleStart 12');",
                            "q.run_command('execute as ' + q.player.username + ' run function kanto:tools/forceclick');",
                            "q.dialogue.close();",
                            "v.battle = q.npc.start_battle(q.player);"]
                    }
                ]
            }
        }
    ]
}