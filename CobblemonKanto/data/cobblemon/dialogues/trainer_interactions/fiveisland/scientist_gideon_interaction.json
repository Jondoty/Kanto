{   "initializationAction": [              
    "q.run_command('scoreboard players set ' + q.player.username + ' BattleStart 1');",
    "q.run_command('execute as ' + q.player.username + ' run function kanto:triggers/stopsound');"
        ],
    "escapeAction": [              
        "q.run_command('scoreboard players set ' + q.player.username + ' BattleStart 0');",
        "q.run_command('execute as ' + q.player.username + ' run function kanto:triggers/stopsound');",
        "q.dialogue.close();"
        ],
    "names": ["Gideon"],
    "speakers": {
        "npc": {
            "name": {
                "type": "expression",
                "expression": "q.npc.name"
            },
            "face": "q.npc.face();"
        }
    },
    "pages": [
        {
            "id": "greeting",
            "speaker": "npc",
            "lines": [
                "I almost managed to sell the Sapphire for huge money..."
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "Next",
                        "value": "next",
                        "action": "q.dialogue.set_page('page2');"
                    }
                ]
            }
        },
        {
            "id": "page2",
            "speaker": "npc",
            "lines": [
                "Then, you just had to come along and blow the whole deal apart!"
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "Next",
                        "value": "next",
                        "action": [
                          "q.dialogue.set_page('page3');"
                        ]
                    }
                ]
            }
        },
        {
            "id": "page3",
            "speaker": "npc",
            "lines": [
                "Fufu... Fufufufu... There's no forgiveness for you!"
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "§c⚔ Battle ⚔§r",
                        "value": "battle",
                        "action": [                           
                                    "q.run_command('scoreboard players set ' + q.player.username + ' BattleStart 11');",
                                    "q.run_command('execute as ' + q.player.username + ' run function kanto:triggers/stopsound');",
                                    "v.battle = q.npc.start_battle(q.player);"
                            ]
                    },
                    {
                        "text": "No",
                        "value": "no",
                        "action": [              
                            "q.run_command('scoreboard players set ' + q.player.username + ' BattleStart 0');",
                            "q.run_command('execute as ' + q.player.username + ' run function kanto:triggers/stopsound');",
                            "q.dialogue.close();"]
                        }
                    ]
                }
            }
        ]
    }